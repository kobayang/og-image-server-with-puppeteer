<html>
  <body>
    <div id="cover-image">
      <img id="og-image" src="<%= url %>" width="<%= width %>" height="<%= height %>" />
      <div class="meetup-date">
        <div class="date"><span>01</span> <span class="dot">.</span> <span>11</span></div>
        <div class="day">Fri</div>
      </div>
    </div>
  </body>
  <style>
    body {
      padding: 0;
      margin: 0;
    }
    #cover-image {
      overflow: hidden;
      position: relative;
    }
    img {
      display: block;
    }
    .meetup-date {
      position: absolute;
      top: 8px;
      left: 9px;
      width: 56px;
      height: 56px;
      border-radius: 8px;
      padding: 10px 0;
      box-sizing: border-box;
      background-color: rgba(0, 0, 0, 0.56);
      color: white;
      text-align: center;
      font-family: Poppins;
      font-size: 18px;
      line-height: 1;
    }
    .date {
      font-size: 0;
      font-weight: 600;
    }
    span {
      font-size: 18px;
    }
    .dot {
      font-family: Lato;
    }
    .day {
      margin-top: 1px;
      font-weight: 300;
      text-transform: uppercase;
    }
  </style>
</html>
